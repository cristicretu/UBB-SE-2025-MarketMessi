<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Marketplace_SE.ChatPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Marketplace_SE"
    xmlns:domain="using:DomainLayer.Domain"
    xmlns:converters="using:MarketMinds.Converters"
    xmlns:selectors="using:MarketMinds.Helpers.Selectors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <!-- Converter for Hex Image Strings -->
        <converters:HexToBitmapImageConverter x:Key="HexImageConverter"/>
        <!-- Converter for Width Percentage -->
        <converters:WidthPercentageConverter x:Key="WidthPercentageConverter"/>

        <!-- DataTemplate for MY Text Messages -->
        <DataTemplate x:Key="MyTextMessageTemplate" x:DataType="domain:Message">
            <Border Background="LightGreen" CornerRadius="6"
                    Margin="40,4,0,4" Padding="8"
                    HorizontalAlignment="Right" MaxWidth="{Binding ActualWidth, ElementName=ChatListView, Converter={StaticResource WidthPercentageConverter}, ConverterParameter=0.7}">
                <!-- Assuming WidthPercentageConverter exists or set fixed MaxWidth -->
                <TextBlock Text="{Binding Content}" TextWrapping="WrapWholeWords" Foreground="Black"/>
                <!-- Optional: Add timestamp TextBlock here -->
            </Border>
        </DataTemplate>

        <!-- DataTemplate for TARGET's Text Messages -->
        <DataTemplate x:Key="TargetTextMessageTemplate" x:DataType="domain:Message">
            <Border Background="LightGray" CornerRadius="6"
                    Margin="0,4,40,4" Padding="8"
                    HorizontalAlignment="Left" MaxWidth="{Binding ActualWidth, ElementName=ChatListView, Converter={StaticResource WidthPercentageConverter}, ConverterParameter=0.7}">
                <TextBlock Text="{Binding Content}" TextWrapping="WrapWholeWords" Foreground="Black"/>
                <!-- Optional: Add timestamp TextBlock here -->
            </Border>
        </DataTemplate>

        <!-- DataTemplate for MY Image Messages -->
        <DataTemplate x:Key="MyImageMessageTemplate" x:DataType="domain:Message">
            <Border Background="LightGreen" CornerRadius="6"
                    Margin="40,4,0,4" Padding="4"
                    HorizontalAlignment="Right">
                <Image Source="{Binding Content, Converter={StaticResource HexImageConverter}}"
                       Width="150" Height="150" Stretch="UniformToFill"/>
                <!-- Optional: Add timestamp overlay here -->
            </Border>
        </DataTemplate>

        <!-- DataTemplate for TARGET's Image Messages -->
        <DataTemplate x:Key="TargetImageMessageTemplate" x:DataType="domain:Message">
            <Border Background="LightGray" CornerRadius="6"
                    Margin="0,4,40,4" Padding="4"
                    HorizontalAlignment="Left">
                <Image Source="{Binding Content, Converter={StaticResource HexImageConverter}}"
                       Width="150" Height="150" Stretch="UniformToFill"/>
                <!-- Optional: Add timestamp overlay here -->
            </Border>
        </DataTemplate>


    </Page.Resources>

    <Grid Background="White" Padding="10">
        <!-- Changed background for contrast -->

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header or Target User Info -->
            <RowDefinition Height="*"/>
            <!-- Chat Area -->
            <RowDefinition Height="Auto"/>
            <!-- Input Area -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock x:Name="TargetUserTextBlock" Grid.Row="0" Text="Chat" FontSize="20" FontWeight="Bold"
                   Foreground="#2C3E50" Margin="0,0,0,10" HorizontalAlignment="Center"/>

        <!-- Chat area - Replaced ScrollViewer/StackPanel with ListView -->
        <ListView
            x:Name="ChatListView"
            Grid.Row="1"
            Background="WhiteSmoke"
            BorderBrush="#ccc" BorderThickness="1"
            Padding="10,5" Margin="0"
            SelectionMode="None"
            IsItemClickEnabled="False"
            CanReorderItems="False"
            CanDragItems="False">

            <ListView.ItemContainerStyle>
                <!-- Remove default padding/margin around items if needed -->
                <Style TargetType="ListViewItem">
                    <Setter Property="Padding" Value="0"/>
                    <Setter Property="Margin" Value="0"/>
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                    <Setter Property="VerticalContentAlignment" Value="Stretch"/>
                    <Setter Property="MinHeight" Value="10"/>
                    <!-- Prevent excessive default height -->
                </Style>
            </ListView.ItemContainerStyle>

            <!-- ItemTemplateSelector will be set from code-behind -->

        </ListView>

        <!-- Bottom controls -->
        <StackPanel Grid.Row="2" Orientation="Vertical" Spacing="8" Margin="0,10,0,0">
            <StackPanel Orientation="Horizontal" Spacing="8">
                <TextBox x:Name="MessageBox" PlaceholderText="Type a message..." MinWidth="200" HorizontalAlignment="Stretch"/>
                <Button x:Name="SendButton" Content="Send" Click="SendButton_Click" Width="80" Background="MediumPurple"/>
                <Button x:Name="AttachButton" Content="ðŸ“Ž" Click="AttachButton_Click" Width="40" ToolTipService.ToolTip="Attach Image"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Spacing="8" HorizontalAlignment="Right">
                <Button x:Name="ExportButton" Content="Export Chat" Click="ExportButton_Click"/>
                <Button x:Name="BackButton" Content="Exit" Click="BackButton_Click"/>
            </StackPanel>
        </StackPanel>

        <!-- Optional Loading Indicator -->
        <ProgressRing x:Name="LoadingIndicator" Grid.Row="1" IsActive="False" HorizontalAlignment="Center" VerticalAlignment="Center"/>

    </Grid>
</Page>