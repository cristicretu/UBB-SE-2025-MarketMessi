@model MarketMinds.Shared.Models.AuctionProduct

@{
    ViewData["Title"] = "Create Product";
}

<div class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold mb-6">Create New Product</h1>

    <div class="bg-white rounded-lg shadow-md p-6">
        <form asp-action="Create" method="post">
            <div class="mb-4">
                <label asp-for="Title" class="block text-gray-700 text-sm font-bold mb-2">Title</label>
                <input asp-for="Title" class="shadow border rounded w-full py-2 px-3 text-gray-700" />
            </div>
            
            <div class="mb-4">
                <label asp-for="Description" class="block text-gray-700 text-sm font-bold mb-2">Description</label>
                <textarea asp-for="Description" class="shadow border rounded w-full py-2 px-3 text-gray-700" rows="3"></textarea>
            </div>
            
            <div class="mb-4">
                <label asp-for="StartPrice" class="block text-gray-700 text-sm font-bold mb-2">Price ($)</label>
                <input asp-for="StartPrice" class="shadow border rounded w-full py-2 px-3 text-gray-700" type="number" step="0.01" min="0" />
            </div>
            
            <input type="hidden" asp-for="CategoryId" value="1" />
            <input type="hidden" asp-for="ConditionId" value="1" />
            <input type="hidden" asp-for="SellerId" value="1" />
            <input type="hidden" name="productType" value="auction" />
            
            <div class="flex items-center mt-6">
                <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
                    Create
                </button>
                <a asp-action="Index" class="ml-4 text-blue-600 hover:text-blue-800">Back to List</a>
            </div>
        </form>
    </div>
</div> 