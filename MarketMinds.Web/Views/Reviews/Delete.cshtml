@model MarketMinds.Shared.Models.Review

@{
    ViewData["Title"] = "Delete Review";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h1>Delete Review</h1>
            
            <div class="alert alert-danger">
                <h4>Are you sure you want to delete this review?</h4>
                <p>This action cannot be undone.</p>
            </div>
            
            <div class="card mb-4">
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Review for @Model.SellerUsername</h5>
                        <div class="star-rating">
                            @for (int i = 1; i <= 5; i++)
                            {
                                if (i <= Model.Rating)
                                {
                                    <i class="fas fa-star text-warning"></i>
                                }
                                else
                                {
                                    <i class="far fa-star text-warning"></i>
                                }
                            }
                            <span class="ml-1">@Model.Rating.ToString("0.0")</span>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <p>@Model.Description</p>
                    
                    @if (Model.Images != null && Model.Images.Any())
                    {
                        <div class="review-images mt-3">
                            <h6>Images:</h6>
                            <div class="row">
                                @foreach (var image in Model.Images)
                                {
                                    <div class="col-md-2 col-sm-3 col-4 mb-2">
                                        <img src="@image.Url" class="img-thumbnail" alt="Review image" />
                                    </div>
                                }
                            </div>
                        </div>
                    }
                </div>
            </div>
            
            <form asp-action="DeleteConfirmed" method="post">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="SellerId" />
                <input type="hidden" asp-for="BuyerId" />
                
                <div class="form-group mb-3">
                    <button type="submit" class="btn btn-danger">Delete</button>
                    <a asp-action="ReviewsGiven" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div> 