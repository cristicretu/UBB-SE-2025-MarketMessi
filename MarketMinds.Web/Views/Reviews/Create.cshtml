@model MarketMinds.Shared.Models.Review

@{
    ViewData["Title"] = "Write a Review";
    var seller = ViewBag.Seller as MarketMinds.Shared.Models.User;
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h1>Write a Review for @seller?.Username</h1>
            
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="SellerId" value="@seller?.Id" />
                
                <div class="form-group mb-3">
                    <label asp-for="Rating" class="control-label">Rating</label>
                    <div class="rating-input">
                        <div class="star-rating-select">
                            @for (int i = 1; i <= 5; i++)
                            {
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" asp-for="Rating" id="rating-@i" value="@i" />
                                    <label class="form-check-label" for="rating-@i">
                                        <i class="far fa-star" id="star-@i"></i>
                                    </label>
                                </div>
                            }
                        </div>
                    </div>
                    <span asp-validation-for="Rating" class="text-danger"></span>
                </div>
                
                <div class="form-group mb-3">
                    <label asp-for="Description" class="control-label">Review</label>
                    <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                
                <div class="form-group mb-3">
                    <label for="imageUrls">Add Images (URLs separated by comma)</label>
                    <input type="text" name="imageUrls" id="imageUrls" class="form-control" placeholder="http://example.com/image1.jpg, http://example.com/image2.jpg" />
                </div>
                
                <div class="form-group mb-3">
                    <button type="submit" class="btn btn-primary">Submit Review</button>
                    <a asp-action="ReviewsGiven" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Rating star selection
            $('.rating-input input[type="radio"]').change(function () {
                var selectedRating = $(this).val();
                $('.rating-input .far.fa-star').removeClass('fa').addClass('far');
                
                for (var i = 1; i <= selectedRating; i++) {
                    $('#star-' + i).removeClass('far').addClass('fa');
                }
            });
            
            // Initialize stars if a rating is pre-selected
            var initialRating = $('input[name="Rating"]:checked').val();
            if (initialRating) {
                for (var i = 1; i <= initialRating; i++) {
                    $('#star-' + i).removeClass('far').addClass('fa');
                }
            }
        });
    </script>
} 