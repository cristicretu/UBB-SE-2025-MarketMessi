<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MarketMinds</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <!-- This is where Tailwind will be included once we set up the React app -->
</head>
<body>
    <header>
        <nav class="bg-blue-600 text-white py-4">
            <div class="container mx-auto flex justify-between items-center">
                <a class="font-bold text-xl" asp-area="" asp-controller="Home" asp-action="Index">MarketMinds</a>
                <div>
                    <ul class="flex space-x-4">
                        <li>
                            <a class="hover:text-blue-200" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li>
                            <a class="hover:text-blue-200" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    
    <div class="container mx-auto my-4">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-gray-100 py-4 mt-8 border-t">
        <div class="container mx-auto">
            <div class="text-center">
                &copy; 2023 - MarketMinds - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </div>
    </footer>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html> 