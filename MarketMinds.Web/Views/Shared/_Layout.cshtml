<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MarketMinds</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: {
                            DEFAULT: '#3B82F6',
                            dark: '#2563EB',
                            light: '#60A5FA'
                        }
                    }
                }
            }
        }
    </script>
</head>
<body class="bg-gray-50">
    <header>
        <nav class="bg-primary text-white py-4">
            <div class="container mx-auto px-4 flex justify-between items-center">
                <a class="font-bold text-2xl" asp-area="" asp-controller="Home" asp-action="Index">MarketMinds</a>
                <div>
                    <ul class="flex space-x-6">
                        <li>
                            <a class="hover:text-primary-light transition" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li>
                            <a class="hover:text-primary-light transition" asp-area="" asp-controller="AuctionProducts" asp-action="Index">Auctions</a>
                        </li>
                        <li>
                            <a class="hover:text-primary-light transition" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    
    <div class="container mx-auto my-4 px-4">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-gray-100 py-4 mt-8 border-t">
        <div class="container mx-auto px-4">
            <div class="text-center text-gray-600">
                &copy; @DateTime.Now.Year - MarketMinds - <a class="text-primary hover:text-primary-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </div>
    </footer>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html> 